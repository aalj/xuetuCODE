<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xuetu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.xuetu.view.TitleBar
        android:id="@+id/backtoperson"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:titleBarLeftImage="@drawable/ic_menu_back"
        app:titleBarTitle="我的收藏" >
    </com.xuetu.view.TitleBar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/youhuijuanfragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="优惠劵" />

        <TextView
            android:id="@+id/questionfragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="问题" />
    </LinearLayout>
    <!-- 覆盖在导航按钮上的覆盖层，表示选中项 -->
    <!-- VIewPager 主要是加载内容的 -->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_wodeshoucang"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>