<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xuetu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <com.xuetu.view.TitleBar
        android:id="@+id/backtoperson_paihangbang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:titleBarLeftImage="@drawable/ic_menu_back"
        app:titleBarRightImage="@drawable/ic_menu_share"
        app:titleBarTitle="排行榜" >
    </com.xuetu.view.TitleBar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/studytimefragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:text="学习时间" />

        <TextView
            android:id="@+id/answerfragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:text="回答问题" />
    </LinearLayout>
    <!-- 覆盖在导航按钮上的覆盖层，表示选中项 -->
    <!-- VIewPager 主要是加载内容的 -->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_paihangbang"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- <android.support.v4.view.ViewPager -->
    <!-- android:id="@+id/viewpager_paihangbang" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- /> -->

</LinearLayout>