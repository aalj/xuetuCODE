<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/_root">
    
  <View android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:id="@+id/view_ontouch"
    		android:background="#00000000"
    />
    
    

    <Button
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:background="@drawable/home_page_button"
        android:src="@drawable/home_page_button"
        android:text="签到"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:visibility="invisible"
        
         />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_btn_up"
        android:layout_marginTop="-5px"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_up" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton3"
        android:layout_marginBottom="-5px"
		android:layout_centerHorizontal="true"
        android:src="@drawable/home_down" />

    <ImageButton
        android:id="@+id/home_btn_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/home_top_button" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/home_3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="60dp"
        android:src="@drawable/home_1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="180dp"
        
        android:src="@drawable/home_4" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="67dp"
        android:src="@drawable/home_5" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/hong_l_button" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/home_2" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
		android:layout_marginRight="70dp"
        android:src="@drawable/home_6" />

    <TextView
        android:id="@+id/tv_xianshi1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/home_btn_up"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/home_btn_up"
        android:layout_toRightOf="@+id/home_btn_up"
        android:gravity="center"
        android:textColor="#404040"
        android:background="@drawable/home_page_tv_background"
        android:text="点击进入课程学习(*提前不超过5分钟,迟到不超过10分钟*)  " />

    <TextView
        android:id="@+id/tv_xianshi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton3"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:text="点击进入自定义学习计划"
        android:gravity="center_vertical" 
        android:textColor="#404040"
        android:background="@drawable/home_page_tv_background"
        />

    
</RelativeLayout>