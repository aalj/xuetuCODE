<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:id="@+id/ll_question_item" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >
 <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_ques_text"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_ques_text"
                android:text="学科类别"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="12dp"
                android:textColor="@color/subject" />
            <TextView
                android:id="@+id/tv_ques_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="问题内容asdddd问题内容asdddd问题内容asdddd问题内容asdddd问题内容asdddd问题内容asdddd问题内容asdddd问题内容asdddd" />

            <TextView
                android:id="@+id/tv_ans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_subject"
                android:layout_alignBottom="@id/tv_subject"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_subject"
                android:text="评论数"
                android:textSize="12dp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_ans_num"
                android:layout_alignBottom="@id/tv_ans_num"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_ans_num"
                android:textSize="12dp"
                android:text="时间"
                android:textColor="@color/gray" />
           
            
        </RelativeLayout>

        <ImageView
            android:layout_weight="2"
            android:id="@+id/iv_ques_img"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/annie" />
    
</LinearLayout>
