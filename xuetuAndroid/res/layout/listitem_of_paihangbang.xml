<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.xuetu"
    android:id="@+id/youhuijuandebuju"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >

            <TextView
                android:id="@+id/paihangbangxuhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/nicheng_paihangbang"
                android:text="1"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blacky" />

            <TextView
                android:id="@+id/number_paihangbang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nicheng_paihangbang"
                android:layout_alignParentRight="true"
                android:layout_marginRight="36dp"
                android:text="时长"
                android:textColor="@color/blackk1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nicheng_paihangbang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_toRightOf="@+id/head_paihangbang"
                android:text="昵称"
                android:textColor="@color/orange2"
                android:textSize="17dp" />

            <com.xuetu.view.CircleImageView
                android:id="@+id/head_paihangbang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="29dp"
                android:layout_toRightOf="@+id/paihangbangxuhao"
                android:src="@drawable/annie"
                app:border_color="@color/black"
                app:border_width="2dp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>