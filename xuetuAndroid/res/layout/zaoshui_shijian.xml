        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="未设置"
        android:textSize="16sp"
        android:textColor="#bcbcbc"
         />
    </LinearLayout>
    
   

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />
    
    
    
