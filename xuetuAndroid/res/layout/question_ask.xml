<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res/com.xuetu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.xuetu.view.TitleBar
        android:id="@+id/title_questionAsk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:titleBarLeftImage="@drawable/ic_menu_back"
        title:titleBarTitle="学徒" >
    </com.xuetu.view.TitleBar>


	<TextView 
	    android:id="@+id/tv_sub"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:gravity="center"
	    android:background="@drawable/setting_item_selector"
	    android:text="@string/subject"/>
	
	<View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@color/black2" 
        />

	<RelativeLayout 
	    android:id="@+id/rl_prop"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/setting_item_selector"
	    >
	    <TextView 
	        android:id="@+id/tv_prop"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="拍照提问"
	        android:background="@drawable/setting_item_selector"/>
	<LinearLayout 
	    android:layout_below="@id/tv_prop"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    >
	<ImageView 
	    android:id="@+id/iv_prop"
	    android:layout_width="200dp"
	    android:layout_height="150dp"
	    android:src="@drawable/crop"
	    android:layout_gravity="center"
	    />


	    
	    
	</LinearLayout>
	    
	</RelativeLayout>
	
	<View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@color/black2" 
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <EditText 
	        android:id="@+id/et_question"
	        android:padding="10dp"
	        android:maxLength="100"
	        android:typeface="monospace" 
	        android:hint="@string/question_hint"
	    android:background="#ffffff"
	    android:layout_weight="1"
	    android:textSize="14sp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="textMultiLine"
	    />
	</LinearLayout>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/touming"
            >
            <Button
     android:id="@+id/btn_ask"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:layout_marginRight="10dp"
     android:layout_marginBottom="10dp"
     android:textColor="@color/white"
     android:background="@color/blue1"
     android:text="提问" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>