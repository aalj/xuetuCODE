<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:background="#9CE339"
            android:gravity="center"
            android:text="答"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_ans_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignLeft="@id/textView1"
            android:layout_below="@id/textView1"
            android:layout_toRightOf="@+id/textView2"
            
            android:text="答案信息" />

        <ImageView
            android:id="@+id/iv_ans_img"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_ans_text"
            android:layout_below="@id/tv_ans_text"
            android:layout_marginRight="22dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/question" />
        
        <TextView
            android:id="@+id/tv_ans_stuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_ans_userImg"
            android:layout_toRightOf="@+id/iv_ans_userImg"
            android:text="回答者用户名:" />
        <TextView
            android:id="@+id/tv_ans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@id/tv_ans_stuName"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignRight="@+id/tv_ans_text"
            android:text="2小时前" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageView2"
            android:layout_alignBottom="@id/imageView2"
            android:layout_toLeftOf="@id/imageView2"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/tv_ans_time"
            android:textSize="20dp"
            android:textColor="@color/gray"
            android:text="10" />

        <com.xuetu.view.CircleImageView
            android:id="@+id/iv_ans_userImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/textView1"
            android:layout_above="@+id/tv_ans_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/find_page" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tv_like"
            android:src="@drawable/ic_like" />
        
    </RelativeLayout>

</LinearLayout>
