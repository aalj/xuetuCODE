<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_margin="5dp">

        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:background="#9CE339"
            android:gravity="center"
            android:text="答"
            android:textColor="@color/white" />
             <TextView
            android:id="@+id/tv_ans_stuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_ans_userImg"
            android:layout_toRightOf="@+id/iv_ans_userImg"
            android:text="回答者用户名:" />
        <com.xuetu.view.CircleImageView
            android:id="@+id/iv_ans_userImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/textView1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/find_page" />

        <TextView
            android:id="@+id/tv_ans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_ans_stuName"
            android:layout_alignBottom="@+id/tv_ans_stuName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="2小时前" />

        </RelativeLayout>
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
		    <TextView
            android:id="@+id/tv_ans_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:text="答案信息" />
		</RelativeLayout>
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp">
		    <ImageView
            android:id="@+id/iv_ans_img"
            android:layout_margin="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/question" />
		</RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        
		<TextView
            android:id="@+id/tv_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/gray"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/tv_like"
            android:layout_alignBottom="@id/tv_like"
            android:layout_alignTop="@id/tv_like"
            android:src="@drawable/ic_like" />

        

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
