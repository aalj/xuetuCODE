<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relativeL"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/relatichangecolor"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tv_coupon_ima"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_shoppingname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ima_ima"
            android:layout_alignLeft="@+id/tv_coupon_name"
            android:layout_alignTop="@+id/ima_ima"
            android:layout_toRightOf="@+id/ima_ima"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="肯德基"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_coupon_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_coupon_name"
            android:text="200"
            android:layout_marginRight="10dp"
            android:textColor="#9e9e9e"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignBottom="@+id/tv_coupon_all"
            android:layout_toLeftOf="@+id/tv_coupon_all"
            android:text="已兑换："
            android:textColor="#9e9e9e"
            android:textSize="10sp" />

        

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/tv_coupon_ima"
            android:text="分 "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/coupon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shoppingname"
            android:textColor="#9e9e9e"
            android:ellipsize="end" 
            android:maxLines="1"
            android:layout_toRightOf="@+id/tv_coupon_ima"
            android:text="优惠券介绍" />

        <TextView
            android:id="@+id/mornum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_coupon_name"
            android:layout_alignBottom="@+id/tv_coupon_name"
            android:layout_toRightOf="@+id/tv_coupon_name"
            android:textSize="20sp"
            android:text="20" />

    </RelativeLayout>

</RelativeLayout>