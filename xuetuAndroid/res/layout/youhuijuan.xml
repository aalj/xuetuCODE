<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.xuetu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/cornor_layout"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >

            <com.xuetu.view.CircleImageView
                android:id="@+id/head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/annie"
                app:border_color="@color/black"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/number"
                style="@style/find_item_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/head"
                android:layout_alignLeft="@+id/youhuijuanxingxi"
                android:text="数目"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/youhuijuanxingxi"
                style="@style/find_item_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/head"
                android:text="优惠劵信息"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/youhuijuanshiyongqingkuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="已经使用"
                android:textColor="@color/gray_black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#ff4455" >

            <TextView
                android:id="@+id/infomation"
                style="@style/txt_ContextStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="点击看具体信息"
                android:textSize="10dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>