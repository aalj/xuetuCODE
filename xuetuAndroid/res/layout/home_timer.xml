<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44a6d5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xuetu.ui.TimerActivity" >

    <TextView
        android:id="@+id/tv_showtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/tv_show_ss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_showtime"
        android:layout_alignRight="@+id/tv_showtime"
        android:layout_marginBottom="89dp"
        android:text="00"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_showtime"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp" 
        android:layout_marginRight="5dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="1231efadf"/>

    <TextView
        android:id="@+id/tv_selectedPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_text"
        android:layout_alignTop="@+id/tv_text"
        android:layout_toRightOf="@+id/tv_text"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_pointText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="累计已获得积分:" />

    <TextView
        android:id="@+id/tv_pointSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_pointText"
        android:layout_toRightOf="@+id/tv_pointText"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="0" />

</RelativeLayout>