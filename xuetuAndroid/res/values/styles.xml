<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="edit_item_title">
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="edit_item">
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="find_item_edit_Re">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="find_item_edit_ima">
      
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:src">@drawable/item_arrow</item>
    </style>

    <style name="find_item_edit_tv">
       
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_toLeftOf">@+id/imageView1</item>
    </style>

</resources>