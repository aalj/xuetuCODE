<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xuetu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.xuetu.widget.TitleBar
        android:id="@+id/backtoperson"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:titleBarTitle="选择学校" >
    </com.xuetu.widget.TitleBar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/black2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/xuexiao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="学校"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_xuexiao"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study"
                        android:layout_alignTop="@+id/study"
                        android:layout_toLeftOf="@+id/imageView3"
                        android:text="选择你的学校" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/black2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/zhuanye"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_sex"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="专业"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_zhuanye"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_sex"
                        android:layout_alignTop="@+id/study_sex"
                        android:layout_toLeftOf="@+id/imageView34"
                        android:text="选择你的专业" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />
            </LinearLayout>
            <!-- 1 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/nianji"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_age"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="年级"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView345"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_nianji"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_age"
                        android:layout_alignTop="@+id/study_age"
                        android:layout_toLeftOf="@+id/imageView345"
                        android:text="选择你的年级" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp" >

                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/buttonchangecolor"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="确定"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>