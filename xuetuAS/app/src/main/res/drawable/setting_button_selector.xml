<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    
    

<!--   定义渐变色（从左下角到右上角绘制渐变色） -->
 	<item android:state_pressed="false">
    	<shape android:shape="rectangle">
            <gradient android:angle="45" android:endColor="@color/blue1" android:startColor="@color/blue1" />
            <!-- 定义控件内容到边界的距离（到四条边界的距离都是7） -->
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <!-- 定义边框线（边框线宽度是2，颜色为白色） -->
            <stroke android:width="1dp" android:color="#FFF" />
            <!-- 定义圆角（圆角半径是8） -->
            <corners android:radius="18dp" />
        </shape>
    </item>

 	<item android:state_pressed="true">
    	<shape android:shape="rectangle">
            <gradient android:angle="45" android:endColor="@color/blueSelect" android:startColor="@color/blueSelect" />
            <!-- 定义控件内容到边界的距离（到四条边界的距离都是7） -->
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <!-- 定义边框线（边框线宽度是2，颜色为白色） -->
            <stroke android:width="1dp" android:color="#FFF" />
            <!-- 定义圆角（圆角半径是8） -->
            <corners android:radius="18dp" />
        </shape>
    </item>
</selector>