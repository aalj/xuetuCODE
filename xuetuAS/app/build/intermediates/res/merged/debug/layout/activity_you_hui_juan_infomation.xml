<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.xuetu"
    android:id="@+id/youhuijuandebuju"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e0434343" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/corner_youhuijuanbg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4" >

            <com.xuetu.widget.CircleImageView
                android:id="@+id/head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/youhuijuanxingxi"
                android:layout_marginLeft="17dp"
                android:src="@drawable/annie"
                app:border_color="@color/black"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/youhuijuanxingxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/head"
                android:text="优惠劵信息"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/youxiaoqixianname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/head"
                android:layout_alignLeft="@+id/youhuijuanxingxi"
                android:text="有效期限:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/youxiaoqixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/youxiaoqixianname"
                android:layout_alignBottom="@+id/youxiaoqixianname"
                android:layout_toRightOf="@+id/youxiaoqixianname"
                android:text="shijina "
                android:textColor="@color/white" />
            
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#00000000" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="丨✿ 优惠劵店家"
                        android:textColor="@color/gray1"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/gray_blue" />

                    <TextView
                        android:id="@+id/dianjiadejutixingxi"
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="店家的具体信息"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                         android:layout_marginRight="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/gray_blue" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="丨✿ 折扣"
                        android:textColor="@color/gray1"
                        android:textSize="12dp" />

                    <TextView
                         android:layout_marginRight="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/gray_blue" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                       >

                        <TextView
                            android:id="@+id/zhekoudejutixingxi"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="折扣的具体信息"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/zhekoudejutixingxi"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="折"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </RelativeLayout>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="丨✿ 需要的积分"
                        android:textColor="@color/gray1"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/gray_blue" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp" >

                        <TextView
                            android:id="@+id/xuyaodejifen"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:text="折扣的具体信息"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/xuyaodejifen"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:text="积分"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </RelativeLayout>

                    <TextView
                         android:layout_marginRight="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/gray_blue" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="丨✿ 使用地点"
                        android:textColor="@color/gray1"
                        android:textSize="12dp" />

                    <TextView
                         android:layout_marginRight="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/gray_blue" />

                    <TextView
                        android:id="@+id/shiyongdidianshuoming"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="使用地点的说明"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                     <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="丨✿ 优惠券介绍"
                        android:textColor="@color/gray1"
                        android:textSize="12dp" />

                    <TextView
                         android:layout_marginRight="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/gray_blue" />

                    <TextView
                        android:id="@+id/shiyongjieshao"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="使用地点的说明"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/button_lijishiyong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonstyle"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onclick"
                android:text="立即使用"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_backToDecember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="onclick"
        android:src="@drawable/ic_menu_back" />

    <com.xuetu.widget.CircleImageView
        android:id="@+id/head_CircleImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:onClick="onclick"
        android:src="@drawable/annie"
        app:border_color="@color/black"
        app:border_width="2dp" />

</RelativeLayout>