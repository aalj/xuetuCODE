<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xuetu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.xuetu.widget.TitleBar
        android:id="@+id/backtoperson"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:titleBarLeftImage="@drawable/ic_menu_back"
        app:titleBarTitle="个人资料" >
    </com.xuetu.widget.TitleBar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/black2" />

            <RelativeLayout
                android:id="@+id/view_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right" />

                <com.xuetu.widget.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/imageView1"
                    
                    android:src="@drawable/iu" />
                <!-- <ImageView -->
                <!-- android:id="@+id/head" -->
                <!-- android:layout_width="80.0dip" -->
                <!-- android:layout_height="80.0dip" -->
                <!-- android:layout_centerVertical="true" -->
                <!-- android:layout_marginRight="15dp" -->
                <!-- android:layout_toLeftOf="@+id/imageView1" -->
                <!-- android:src="@drawable/head" /> -->

<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="头像"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/nicheng"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="昵称"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_nicheng"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study"
                        android:layout_alignTop="@+id/study"
                        android:layout_toLeftOf="@+id/imageView3"
                        android:text="你的昵称" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/gexingqianming"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_qianming"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="个性签名"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/study_gexingqianming"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_qianming"
                        android:layout_alignTop="@+id/study_qianming"
                        android:layout_toLeftOf="@+id/imageView33"
                        android:text="签名" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="@color/black2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/xingbie"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_sex"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="性别"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/sex"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_sex"
                        android:layout_alignTop="@+id/study_sex"
                        android:layout_toLeftOf="@+id/imageView34"
                        android:text="男" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/nianling"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_age"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="年龄"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView345"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_age"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_age"
                        android:layout_alignTop="@+id/study_age"
                        android:layout_toLeftOf="@+id/imageView345"
                        android:text="16" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/nianji_grade"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_grade"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="年级"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView3456"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_grade"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_grade"
                        android:layout_alignTop="@+id/study_grade"
                        android:layout_toLeftOf="@+id/imageView3456"
                        android:text="幼稚园" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/black2" />

                <RelativeLayout
                    android:id="@+id/xuexiao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    
                    android:background="@drawable/setting_item_selector"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/study_school"
                        style="@style/TxtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="学校"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView34567"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/text_school"
                        style="@style/find_item_edit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/study_school"
                        android:layout_alignTop="@+id/study_school"
                        android:layout_toLeftOf="@+id/imageView34567"
                        android:text="❤以韶华之年宛君心" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>