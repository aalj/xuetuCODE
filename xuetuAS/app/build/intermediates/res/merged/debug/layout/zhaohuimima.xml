<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res/com.xuetu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical" >

    <com.xuetu.widget.TitleBar
        android:id="@+id/titlebar_forgetpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title:titleBarLeftImage="@drawable/ic_menu_back"
        title:titleBarTitle="找回密码" >
    </com.xuetu.widget.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#00000000" >

            <EditText
                android:id="@+id/et_usertel_forgetpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_usertel_forgetpwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="账户 "
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#00000000" >

            <EditText
                android:id="@+id/et_checknum_forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="输入验证码"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_checknum_forget_pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="验证码"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#00000000" >

            <TextView
                android:id="@+id/huoqvyanzhengma_forgetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="29dp"
                android:background="@drawable/textchangebackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:onClick="onclick"
                android:text="获取验证码"
                android:textColor="#353535"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/et_password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="输入新密码"
                android:paddingLeft="90dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_password_new"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="密码"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp" >

            <EditText
                android:id="@+id/et_password_newagain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="再次输入次密码"
                android:paddingLeft="90dp"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_new_password"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/et_password_newagain"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:text="密码"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_finish_forgetpwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonchangecolor"
            android:onClick="onclick"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="19dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/textchangebackground"
            android:onClick="onclick"
            android:text="已有帐号，立即登录"
            android:textColor="#353535"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>